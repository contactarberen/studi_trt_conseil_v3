{% extends 'base.html.twig' %}

{% block title %}AttributsCandidat{% endblock %}

{% block body %}
    <h1>AttributsCandidat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attributs_candidat.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ attributs_candidat.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ attributs_candidat.prenom }}</td>
            </tr>
            <tr>
                <th>Cv</th>
                <td>
                    {% if attributs_candidat.cv  %}
                        <a href="{{ asset('uploads/cv/' ~ attributs_candidat.cv) }}">{{attributs_candidat.cv}}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if attributs_candidat.image  %}
                        <img src={{ asset('uploads/image/' ~ attributs_candidat.image) }} class="card-img-top" alt={{attributs_candidat.image}}>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_attributs_candidat_index') }}">back to list</a>

    <a href="{{ path('app_attributs_candidat_edit', {'id': attributs_candidat.id}) }}">edit</a>

    {{ include('attributs_candidat/_delete_form.html.twig') }}
{% endblock %}
