{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IntitulePoste</th>
                <th>LieuTravail</th>
                <th>Description</th>
                <th>Horaires</th>
