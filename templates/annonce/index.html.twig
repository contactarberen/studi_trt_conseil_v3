                        <td>{{ annonce.idTypeContrat }}</td>
                        <td>{{ annonce.etat }}</td>
                        <td>{{ annonce.userId }}</td>
                        <td>
                            <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}">show</a>       
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if is_granted('ROLE_RECRUTEUR') %}
